{
  "name": "@imccausl/dev",
  "version": "1.1.2",
  "type": "module",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "tsc -b ./tsconfig.build.json",
    "copy-assets": "tsx infrastructure/copy-assets.ts",
    "build": "yarn clean && yarn compile && yarn copy-assets",
    "publish": "semantic-release",
    "lint": "tsx src/lint/index.ts .",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/index.ts"
  },
  "bin": "./lib/index.js",
  "exports": {
    "./eslint-config": "./src/lint/eslint.ts",
    "./eslint-config/base": "./src/lint/config/base.ts",
    "./tsconfig.json": "./src/types/tsconfig.default.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "exports": {
      "./eslint-config": {
        "default": "./lib/lint/eslint.js",
        "types": "./lib/lint/eslint.d.ts"
      },
      "./eslint-config/base": {
        "default": "./lib/lint/config/base.js",
        "types": "./lib/lint/config/base.d.ts"
      },
      "./tsconfig.json": "./lib/types/tsconfig.default.json"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imccausl/dev-scripts.git"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@eslint/js": "^9.30.1",
    "@imccausl/eslint-config": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@typescript-eslint/types": "^8.37.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import-x": "^4.16.1",
    "jiti": "^2.4.2",
    "typescript-eslint": "^8.36.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.0.0",
    "@yarnpkg/sdks": "^3.2.2",
    "semantic-release": "^24.2.6",
    "semantic-release-yarn": "^3.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2"
}